<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="view_quiz_survey_tree" model="ir.ui.view">
        <field name="name">quiz.survey.tree</field>
        <field name="model">survey.survey</field>
        <field name="arch" type="xml">
            <tree string="Quiz Surveys">
                <field name="is_quiz"/>
                <field name="description"/>
                <field name="active"/>
            </tree>
        </field>
    </record>

    <record id="view_quiz_survey_form" model="ir.ui.view">
        <field name="name">quiz.survey.form</field>
        <field name="model">survey.survey</field>
        <field name="arch" type="xml">
            <form string="Quiz Survey">
                <sheet>
                    <group>
                        <field name="is_quiz"/>
                        <field name="description"/>
                        <field name="active"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_quiz_survey" model="ir.actions.act_window">
        <field name="name">Quiz Surveys</field>
        <field name="res_model">survey.survey</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p>Create and manage quiz surveys here.</p>
        </field>
    </record>

    <menuitem id="menu_quiz_root" name="Quiz" sequence="10"/>
    <menuitem id="menu_quiz_surveys" name="Surveys" parent="menu_quiz_root" action="action_quiz_survey"/>
</odoo>

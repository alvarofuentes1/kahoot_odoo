<?xml version="1.0" encoding="UTF-8"?>
<odoo>

    <template id="question_timer_container" inherit_id="survey.survey_fill_header">
        <xpath expr="//h1[@class='o_survey_timer_container timer text-end']" position="inside">
            <p id="question_timer" t-att-data-survey-title="survey.title"/>
            <script type="text/javascript" src="/magister_quiz/static/src/js/timer.js"/>

        </xpath>
    </template>

    <template id="survey_ranking_template">
        <t t-if="ranking">
            <table class="table table-striped">
                <thead>
                    <tr>
                        <th>Posición</th>
                        <th>Usuario</th>
                        <th>Puntuación</th>
                    </tr>
                </thead>
                <tbody>
                    <t t-foreach="ranking" t-as="rank">
                        <tr>
                            <td><t t-esc="rank.rank_position"/></td>
                            <td><t t-esc="rank.user_name"/></td>
                            <td><t t-esc="rank.total_score"/></td>
                        </tr>
                    </t>
                </tbody>
            </table>
        </t>
    </template>


</odoo>
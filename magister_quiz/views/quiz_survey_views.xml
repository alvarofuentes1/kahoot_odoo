<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <!-- Formulario para Quiz Survey -->
    <record id="view_quiz_survey_form" model="ir.ui.view">
        <field name="name">quiz.survey.form</field>
        <field name="model">quiz.survey</field>
        <field name="arch" type="xml">
            <form string="Quiz Survey">
                <sheet>
                    <group>
                        <field name="survey_type" widget="radio" options="{'horizontal': True}"/>
                        <div>
                            <h1>
                                <field name="title"/>
                            </h1>
                        </div>
                        <group>
                            <group>
                                <field name="active" invisible="1"/>
                                <field name="user_id" widget="many2one_avatar_user"/>
                            </group>
                        </group>
                    </group>
                    <notebook>
                        <page string="Questions" name="questions">
                            <field name="question_and_page_ids" nolabel="1" widget="question_page_one2many"
                                   mode="tree,kanban" context="{'default_survey_id': id}">
                                <tree decoration-bf="is_page">
                                    <field name="sequence" widget="handle"/>
                                    <field name="title" widget="survey_description_page"/>
                                    <field name="background_image" column_invisible="True"/>
                                    <field name="question_type"/>
                                    <field name="constr_mandatory" optional="1"/>
                                    <field name="is_page" column_invisible="True"/>
                                    <field name="questions_selection" column_invisible="True"/>
                                    <field name="survey_id" column_invisible="True"/>
                                    <field name="triggering_question_ids" column_invisible="True"/>
                                    <field name="triggering_answer_ids" column_invisible="True"
                                           widget="many2many_tags"/> <!-- widget to fetch display_name -->
                                    <widget name="survey_question_trigger" width="30px"/>
                                    <button name="copy" type="object" icon="fa-clone" title="Duplicate Question"/>
                                    <control>
                                        <create name="add_question_control" string="Add a question"/>
                                    </control>
                                </tree>
                            </field>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Vista tipo kanban -->
    <record id="view_quiz_survey_kanban" model="ir.ui.view">
        <field name="name">quiz.survey.kanban</field>
        <field name="model">quiz.survey</field>
        <field name="arch" type="xml">
            <kanban js_class="survey_view_kanban">
                <templates>
                    <div t-name="kanban-menu" t-if="widget.editable">
                        <a t-if="widget.deletable" role="menuitem" type="delete" class="dropdown-item">Delete</a>
                    </div>
                    <div t-name="kanban-box" t-attf-class="oe_kanban_card oe_kanban_global_click">
                        <div>
                            <div>
                                <strong>
                                    <field name="title"/>
                                </strong>
                                <div>
                                    <field name="description"/>
                                </div>
                            </div>
                        </div>
                    </div>
                </templates>
            </kanban>
        </field>
    </record>


    <record id="action_quiz_survey_kanban" model="ir.actions.act_window">
        <field name="name">Encuestas</field>
        <field name="res_model">quiz.survey</field>
        <field name="view_mode">kanban,form</field>
    </record>

</odoo>
